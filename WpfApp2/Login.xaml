<Window x:Class="WpfApp2.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Đăng nhập" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
        <Label Content="Tên đăng nhập:" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Margin="10"/>
        <TextBox x:Name="usernameTextBox" VerticalAlignment="Center" Grid.Row="1" Margin="120,0,10,0" Height="26"/>
        <Label Content="Mật khẩu:" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Margin="10"/>
        <PasswordBox x:Name="passwordBox" VerticalAlignment="Center" Grid.Row="2" Margin="120,0,10,0" Height="26"/>

        <Button Background="AntiqueWhite" Content="Đăng nhập" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3" Click="LoginButton_Click" Width="90" Height="36"/>
    </Grid>
</Window>
